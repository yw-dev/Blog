.nav
    margin: 0
    padding: 0
    width: 100%
    height: 66px
    position: relative
    display: block

.navbar
    position: absolute
    display: block

.navbar-nav
    padding: 0px 60px

.toggle-search
    display: block
    font-size: 12px
    //background: none repeat scroll 0 0 #D56464
    color: gray
    cursor: pointer
    -webkit-transition: all .25s ease-out
    -moz-transition: all .25s ease-out
    -o-transition: all .25s ease-out
    transition: all .25s ease-out

.toggle-search a
    border-left: 1px solid #B7D0E4
    display: inline-block
    margin-left: -1px
    padding: 0px 0px 0px 3px